<div id="<%= dom_id user %>">
  <div class="card">
    <div class="card-content">
      <div class="media">
        <div class="media-left">
          <figure class="image is-48x48">
            <img src="<%= user.photo %>" alt="Placeholder image">
          </figure>
        </div>
        <div class="media-content">
          <p class="title is-4"><%= user.name %></p>
          <p class="subtitle is-6"><i class="fas fa-envelope"></i> <%= user.email %></p>    
          <p class="subtitle is-5"><%= link_to "Show this user", user %></p>      
        </div>
      </div>
    </div>
  </div>
  <br />
</div>

