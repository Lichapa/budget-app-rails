<p style="color: green"><%= notice %></p>

<div class="card">
    <div class="card-image">
      <figure class="image is-3by2">
        <img src="<%= @user.photo %>" alt="Placeholder image">
      </figure>
    </div>
    <div class="card-content">
      <div class="media">
        <div class="media-left">
          <figure class="image is-48x48">
            <img src="<%= @user.photo %>" alt="Placeholder image">
          </figure>
        </div>
        <div class="media-content">
          <p class="title is-4"><%= @user.name %></p>
          <p class="subtitle is-6"><i class="fas fa-envelope"></i> <%= @user.email %></p>          
        </div>
      </div>

      <div class="content">       
        <time datetime="2016-1-1">Registered on: <%= @user.created_at %></time>        
      </div>

      <footer class="card-footer">
        <p class="card-footer-item"><%= link_to "Edit this user", edit_user_path(@user) %></p>
        <p class="card-footer-item"><%= link_to "Back to users", users_path %></p>       
      </footer>
      <br />
      <p></p><%= button_to "Destroy this user", @user, method: :delete, class: "button is-danger card-footer-item" %></p>
    </div>
  </div>
</div>
